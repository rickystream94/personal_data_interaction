<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bobbytables.phrasebook.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <com.hanks.htextview.HTextView
            android:id="@+id/nicknameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/nicknameText"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:onClick="checkReadPermissions"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"/>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/xpPointsBar"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            app:rcBackgroundColor="@color/colorPrimaryDark"
            app:rcBackgroundPadding="5dp"
            app:rcMax="100"
            app:rcProgress="50"
            app:rcProgressColor="@color/primary_light"
            app:rcRadius="20dp"
            app:rcReverse="false"/>

        <TextView
            android:id="@+id/currentXpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:textSize="18sp"
            android:text="1300/2000 XP"
            android:layout_centerHorizontal="true"
            android:layout_margin="18dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_toStartOf="@id/xpPointsBar"
            android:contentDescription="@string/experience_points"
            android:scaleType="centerCrop"
            android:src="@drawable/star"/>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/levelsBar"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@id/xpPointsBar"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            app:rcBackgroundColor="@color/colorAccent"
            app:rcBackgroundPadding="5dp"
            app:rcMax="100"
            app:rcProgress="20"
            app:rcProgressColor="@color/primary_text"
            app:rcRadius="20dp"
            app:rcReverse="false"/>

        <TextView
            android:id="@+id/currentLevelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xpPointsBar"
            android:textSize="18sp"
            android:text="Level 1/10"
            android:layout_centerHorizontal="true"
            android:layout_margin="18dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/xpPointsBar"
            android:layout_margin="10dp"
            android:layout_toStartOf="@id/levelsBar"
            android:contentDescription="@string/experience_points"
            android:scaleType="centerCrop"
            android:src="@drawable/level"/>

    </RelativeLayout>
</ScrollView>